<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="/images/programmer.png" class="card-img-top" alt="programmer">
        </div>
        {{#each array_news}}
        <div class="col">
            <h4 class="mt-3">{{title}}</h4>
            <small class="text-primary">{{fechaForm}} - {{author}}</small>
            <p> Descripción: {{description}}</p>
            <p class="mt-3">{{texto}}</p>
        </div>
        {{/each}}
    </div>
    <div class="row mt-5">
        {{#if status}}
        <div class="col-4">
            <h5>Comentar</h5>
            <form method="post" action="/noticias/comentar">
                <div class="form-group">
                    <textarea name="comentario" placeholder="Comentario"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Enviar</button>
            </form>
        </div>
        {{else}}
        <div class="col-4">
            <a href="/login">Iniciar sesión</a>
        </div>
        {{/if}}
    </div>
</div>